<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,600" rel="stylesheet" type="text/css">


<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link rel="icon" href="Favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <title>Update User Details</title>
    <script>


	  var checkemail = function()
	  {
	    var emailReg = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;
	    var email = document.getElementById('Email').value
	    if (!emailReg.test(email)) {
		    document.getElementById('emailmsg').style.color = 'red';
		    document.getElementById('emailmsg').innerHTML = 'Wrong Email';
	    } else {

		    document.getElementById('emailmsg').innerHTML = ' ';
	    }
	  }

	  var checkph = function ()
	  {
		  var inpObj = document.getElementById("ph");
		  if (!inpObj.checkValidity() && inpObj.length!=10) {
		     document.getElementById('demo').style.color = 'red';
		    document.getElementById("demo").innerHTML = "Incorrect Phone Number";
		  } else {
		    document.getElementById("demo").innerHTML = " ";
		  }
	 }

  </script>
<style>

		body 		{ padding: 5%;
            background-image: url("bg1.jpg");
            background-repeat: no-repeat;
    background-size: 100% 100%; }
	.row{
opacity:0.75;
	}</style>
</head>
<body margin="20px 20px 20px 20px">





        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">Registration</div>
                        <div class="card-body">

                            <form action="/update" method="post">
				  <div class="form-row">
				    <div class="form-group col-md-12">
				      <label for="inputEmail4">User Name</label>
				      <input type="text" class="form-control" id="inputEmail4" placeholder="Username" name="username" value="<%=data[0].username%>" disabled>
				    </div>
				  </div>

				  <hr>
				  <div class="alert alert-primary" role="alert">
					 Personal Information
				</div>

			

				    <div class="form-row">
				      <div class="form-group col-md-6">
				      <label for="inputEmail4">Gender<br></label>
				  <div class="form-check form-check-inline">
			  <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male">
			  <label class="form-check-label" for="inlineRadio1">Male</label>
			</div>
			<div class="form-check form-check-inline">
			  <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female">
			  <label class="form-check-label" for="inlineRadio2">Female</label>
			</div>
			<div class="form-check form-check-inline">
			  <input class="form-check-input" type="radio" name="gender" id="inlineRadio3" value="Trangender" >
			  <label class="form-check-label" for="inlineRadio3">Trangender</label>
			</div>
			</div>
			</div>

			<div class="form-row">
				    <div class="form-group col-md-6">
				      <label for="inputEmail4">Country</label>
				      <input type="text" class="form-control" id="inputEmail4" placeholder="Country" name="country" value="<%=data[0].country%>">
				    </div>
				    <div class="form-group col-md-6">
				     <label for="inputEmail4"> Nationality  </label>
				      <input type="text" class="form-control" id="inputEmail4" placeholder="Nationality" name="nationality" value="<%=data[0].nationality%>">
				    </div>
				  </div>

			<div class="form-row">
				    <div class="form-group col-md-6">
				      <label for="inputEmail4">Email</label>
				      <input type="email" class="form-control" id="Email" placeholder="Email" name="email" value="<%=data[0].email%>" onkeyup='checkemail();' required>
				       <span id='emailmsg'></span>
				    </div>
				    <div class="form-group col-md-6">
				     <label for="inputEmail4"> Phone Number  </label>
				      <input type="number" class="form-control" id="ph" placeholder="Phone" name="phnumber" value="<%=data[0].phnumber%>" min="5555555555" max="9999999999" onblur='checkph();' required>
				      <span id='demo'></span>
				    </div>
				  </div>

			<div class="form-row">
				    <div class="form-group col-md-6">
				      <label for="inputEmail4">Occupation</label>
				      <input type="text" class="form-control" id="inputEmail4" placeholder="Occupation" name="occupation" value="<%=data[0].occupation%>" >
				    </div>
				    <div class="form-group col-md-6">
				     <label for="inputEmail4"> Date of birth  </label>
				      <input type="date" class="form-control" id="inputEmail4" placeholder="DOB" name="dateofbirth" required>
				    </div>

				  </div>


				  <hr>
				  <div class="alert alert-primary" role="alert">
					 Residential Information
				</div>



				  <div class="form-group">
				    <label for="inputAddress">Address</label>
				    <input type="textarea" class="form-control" id="inputAddress" placeholder="1234 Main St" name="address" value="<%=data[0].address%>" >
				  </div>

				  <div class="form-row">
				    <div class="form-group col-md-4">
				      <label for="inputCity">City</label>
				      <input type="text" class="form-control" id="inputCity" name="city" value="<%=data[0].city%>" >
				    </div>
				    <div class="form-group col-md-4">
				      <label for="inputState">District</label>
				        <input type="text" class="form-control" id="inputState" name="district" value="<%=data[0].district%>" >
				    </div>
				    <div class="form-group col-md-4">
				      <label for="inputZip">State</label>
				      <input type="text" class="form-control" id="inputZip" name="state" value="<%=data[0].state%>" >
				    </div>
				  </div>

				  <button type="submit" class="btn btn-primary">Update Details</button>
				</form>
                        </div>
                    </div>
            </div>
        </div>




<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>
</html>
